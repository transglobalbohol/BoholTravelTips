{
  "name": "bohol-travel-tips-frontend",
  "private": true,
  "version": "1.0.0",
  "description": "Ultimate guide to Bohol Philippines - Frontend application",
  "type": "module",
  "keywords": ["bohol", "philippines", "travel", "tourism", "react", "typescript"],
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build && node scripts/generate-sitemap.js",
    "build:analyze": "pnpm run build && npx vite-bundle-analyzer dist",
    "preview": "vite preview --host",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,css,md}\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "node -e \"const fs=require('fs'); if(fs.existsSync('dist')) fs.rmSync('dist',{recursive:true})\"",
    "generate-sitemap": "node scripts/generate-sitemap.js",
    "build:sitemap": "node scripts/generate-sitemap.js"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.21.0",
    "axios": "^1.6.2",
    "react-hook-form": "^7.48.2",
    "lucide-react": "^0.344.0",
    "@hookform/resolvers": "^3.3.2",
    "yup": "^1.4.0",
    "react-hot-toast": "^2.4.1",
    "date-fns": "^3.0.6",
    "swiper": "^11.0.5",
    "react-query": "^3.39.3",
    "zustand": "^4.4.7",
    "react-helmet-async": "^1.3.0",
    "react-intersection-observer": "^9.5.3"
  },
  "devDependencies": {
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.5.3",
    "vite": "^5.4.2",
    "vite-plugin-pwa": "^0.17.4",
    "vite-bundle-analyzer": "^0.7.0",
    "prettier": "^3.1.1",
    "prettier-plugin-tailwindcss": "^0.5.9",
    "terser": "^5.26.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/BoholTravelTips.git"
  },
  "homepage": "https://www.boholtraveltips.com",
  "author": "Bohol Travel Tips Team",
  "license": "MIT"
}
