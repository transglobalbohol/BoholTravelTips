# Frontend Environment Variables Template
# Copy to .env and fill in your actual values

# API Configuration
VITE_API_URL=https://api.boholtraveltips.com/api
VITE_APP_URL=https://www.boholtraveltips.com

# Application Configuration
VITE_APP_NAME=Bohol Travel Tips
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Ultimate guide to Bohol Philippines

# Security Configuration
VITE_ENABLE_CSP=true
VITE_ENABLE_SECURITY_HEADERS=true
VITE_DISABLE_DEVTOOLS=true

# Feature Flags
VITE_ENABLE_PWA=true
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_TRACKING=true

# External Services
VITE_GOOGLE_MAPS_API_KEY=your-google-maps-api-key-here
VITE_GOOGLE_ANALYTICS_ID=GA4-MEASUREMENT-ID

# File Upload Configuration
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif

# Performance Configuration
VITE_ENABLE_SOURCE_MAPS=false
VITE_BUNDLE_ANALYZER=false

# Development Configuration (only in development)
VITE_DEV_TOOLS=false
VITE_DEBUG_MODE=false

# Content Security Policy Configuration
VITE_CSP_DEFAULT_SRC='self'
VITE_CSP_SCRIPT_SRC='self' 'unsafe-inline'
VITE_CSP_STYLE_SRC='self' 'unsafe-inline' https://fonts.googleapis.com
VITE_CSP_FONT_SRC='self' https://fonts.gstatic.com
VITE_CSP_IMG_SRC='self' data: https:
VITE_CSP_CONNECT_SRC='self' https://api.boholtraveltips.com
VITE_CSP_MEDIA_SRC='self'
VITE_CSP_OBJECT_SRC='none'
VITE_CSP_FRAME_SRC='none'

# Rate Limiting (Client-side)
VITE_API_RATE_LIMIT=10
VITE_API_RATE_WINDOW=60000

# Session Configuration
VITE_SESSION_TIMEOUT=1800000
VITE_IDLE_TIMEOUT=900000

# Error Tracking
VITE_ERROR_TRACKING_URL=https://api.boholtraveltips.com/api/errors
VITE_ERROR_SAMPLING_RATE=0.1

# Performance Monitoring
VITE_PERFORMANCE_MONITORING=true
VITE_CORE_WEB_VITALS=true
