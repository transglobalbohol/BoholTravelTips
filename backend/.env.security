# Enhanced Security Configuration
# Copy this to your .env file and update with your actual values

# Database Configuration
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/boholtraveltips?retryWrites=true&w=majority

# JWT Configuration - Enhanced Security
JWT_SECRET=your-super-secure-jwt-secret-at-least-64-characters-long-here
JWT_EXPIRE=24h
JWT_KEY_ID=default

# Security Features (Optional - for enhanced security)
VERIFY_IP_ADDRESS=false  # Set to true for stricter security (may cause issues with mobile/proxy users)
VERIFY_USER_AGENT=false  # Set to true for stricter security (may cause issues with browser updates)

# Rate Limiting
WHITELISTED_IPS=127.0.0.1,::1  # Comma-separated list of whitelisted IPs

# CORS Configuration
CLIENT_URL=http://localhost:5173

# Email Configuration (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@boholtraveltips.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=./uploads

# Server Configuration
PORT=5000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-session-secret-key-here

# Security Logging
LOG_LEVEL=info
LOG_FILE=./logs/security.log

# External API Keys (if needed)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
