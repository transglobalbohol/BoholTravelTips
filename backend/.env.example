# Backend Environment Variables Template
# Copy to .env and fill in your actual values

# Server Configuration
NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/bohol-travel-tips

# JWT Configuration
JWT_SECRET=your-super-secure-jwt-secret-here-minimum-64-characters-long
JWT_EXPIRE=24h

# CORS Configuration
CLIENT_URL=https://www.boholtraveltips.com

# File Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-email-password

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10mb
LOG_FILE_MAX_FILES=5

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-here
SESSION_TIMEOUT=86400000

# Two-Factor Authentication
TOTP_SERVICE_NAME=Bohol Travel Tips
TOTP_ISSUER=boholtraveltips.com

# Database Security
DB_SSL=true
DB_SSL_VALIDATE=true

# API Rate Limiting
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX=5
UPLOAD_RATE_LIMIT_WINDOW=3600000
UPLOAD_RATE_LIMIT_MAX=10

# Security Headers
HELMET_HSTS_MAX_AGE=31536000
HELMET_CSP_REPORT_URI=/api/security/csp-report

# Monitoring and Alerting
SECURITY_ALERT_EMAIL=admin@boholtraveltips.com
HEALTH_CHECK_INTERVAL=300000

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-here
BACKUP_FREQUENCY=daily
